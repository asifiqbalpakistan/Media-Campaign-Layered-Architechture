@using Microsoft.AspNetCore.Identity
@using OMG_Annalect_DAL_Core.Models

@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager

    @using (Html.BeginForm("LogOff", "Account", FormMethod.Post, new { id = "logoutForm", @class = "navbar-right" }))
    {
        @Html.AntiForgeryToken()
       
        <nav class="navbar navbar-expand-lg">



            <ul class="navbar-nav">


                <li class="nav-item">
                    <a class="nav-link " data-toggle="dropdown" href="#" style="color:#73818f">
                        <i class="nav-icon fa fa-cogs"></i> Settings
                    </a>
                    <div class="dropdown-menu dropdown-menu-right dropdown-default">
                        <a class="dropdown-item" href="@Url.Action("ChangePassword", "Account")"><i class="nav-icon fa fa-wrench"></i> Change Password</a>
                      
                    </div>
                </li>
                <li class="nav-item">
                    <a class="nav-link " href="javascript:document.getElementById('logoutForm').submit()">
                        <i class="nav-icon fa fa-sign-out"></i>Logout
                    </a>
                </li>

                <li>
                    <a class="nav-link nav-link" href="@Url.Action("ViewProfile", "Account")" role="button" aria-haspopup="true" aria-expanded="false">
                        <div class="tool-divider"></div>
                        <div><i class="nav-icon fa fa-user"></i>Hi, @UserManager.GetUserName(User)</div>

                    </a>
                </li>
            </ul>

        </nav>
    }
    <style>
        #hs-nav-v4 #navbar .tool-divider {
            width: 0;
            border-left: 1px solid #516f90;
            height: 30px;
            margin: 13px 10px 14px;
        }
    </style>
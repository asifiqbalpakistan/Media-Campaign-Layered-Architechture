<OMG_Annalect_DomainModels.CampaignModel>
    @{
        ViewBag.Title = "Reports";
    }

    <div>
        <div class="animated fadeIn">
            <div class="row">
                <div class="col-md-4"></div>
                    <div class="col-md-2"> Client</div>
                    <div class="col-md-2"> Country</div>

                    <div class="col-md-2">Budget</div>
                    <div class="col-md-2"></div>
                </div>
            <div class="row">
                <div class="col-md-4"></div>
                <div class="col-md-2">@Html.DropDownList("ClientId", (SelectList)ViewBag.ClientList, "Select Client",new { @class = "form-control" })</div>
                <div class="col-md-2">@Html.DropDownList("CountryId", (SelectList)ViewBag.CountryList, "Select Client", new { @class = "form-control" })</div>

                <div class="col-md-2"><input id="Budget" type="number"></div>
                <div class="col-md-2"><button id="btnsave" class="btn btn-md btn-primary" type="button">Search</button></div>
            </div>
                <div class="row"><br /></div>
                <div class="card">
                    <div class="card-header">
                        <i class="fa fa-users"></i> @ViewBag.Title

                    </div>
                    <div class="card-body">
                        <table class="table table-striped table-responsive-sm datatable" id="tblReport">
                            <thead>
                                <tr>
                                    <th>Campaign Name</th>
                                    <th>Budget</th>
                                    <th>Country</th>
                                    <th>Start Date</th>
                                    <th>End Date</th>
                                    <th>Added By</th>
                                    <th>Added Time</th>
                                    <th class="no-sort"></th>
                                </tr>
                            </thead>
                            <tbody>

                                @foreach (var record in Model)
                                {
                                    <tr>
                                        <td>@record.Name</td>

                                        <td>@record.Budget</td>
                                        <td>@record.Country</td>
                                        <td>@record.StartDateTime.ToString("dd MMM yyyy HH:mm")</td>
                                        <td>@record.EndDateTime.ToString("dd MMM yyyy HH:mm")</td>

                                        <td>@record.AddedBy</td>
                                        <td>@record.AddedTime.ToString("dd MMM yyyy HH:mm")</td>
                                        @*<td>
                                    <a class="btn btn-info" href="@Url.Action(" Edit", "Campaign" , new { id=record.CampaignModelId })">
                                        <i class="fa fa-edit"></i>
                                    </a>
                                    <a class="btn btn-info" title="Generate XML" href="@Url.Action(" GenerateXmlFile", "Campaign" , new { id=record.CampaignModelId })">
                                        <i class="fa fa-money"></i>
                                    </a>
                                    <a class="btn btn-brand btn-sm btn-html5" href="javascript:void(0)" onclick="DeleteCampaign('@record.CampaignModelId')">
                                        <i class="fa fa-trash-o"></i>
                                    </a>
                                </td>*@
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
    </div>

